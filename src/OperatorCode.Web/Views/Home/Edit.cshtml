@model Operator

<h2>Edit operator</h2>

<form asp-action="Edit" method="post">
    @Html.HiddenFor(model => model.Code)
    <div>
        <label for="Name">Name</label>
        <input type="text" id="Name" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <button type="submit">Save</button>
</form>

