@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<Operator>

<h2>List of operators</h2>
<a href="@Url.Action("Create", "Home")">Create a new operator</a>

<table>
    <thead>
    <tr>
        <th>Код</th>
        <th>Имя</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var op in Model)
    {
        <tr>
            <td>@op.Code</td>
            <td>@op.Name</td>
            <td>
                <a href="@Url.Action("Edit", "Home", new { code = op.Code })">Edit</a>
                <a href="@Url.Action("Delete", "Home", new { code = op.Code })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>