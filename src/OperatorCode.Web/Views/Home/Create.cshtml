@model Operator

<h2>Create a new operator</h2>

<form asp-action="Create" method="post">
    <div>
        <label for="Name">Name</label>
        <input type="text" id="Name" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <button type="submit">Create</button>
</form>